# I have solved the 1D harmonic Oscillator with the help of Euler's method here

import numpy as np
import matplotlib.pyplot as plt


def derivatives(x, v, omega):
    dxdt = v
    dvdt = -omega**2 * x
    return dxdt, dvdt


# Parameters
omega = 1.0
dt = 0.01
t_max = 20

# Initial conditions
x = 1.0
v = 0.0

# Time array
t_values = np.arange(0, t_max, dt)

# Storage arrays
x_values = []
v_values = []

# Euler integration
for t in t_values:
    x_values.append(x)
    v_values.append(v)

    dxdt, dvdt = derivatives(x, v, omega)

    x = x + dxdt * dt
    v = v + dvdt * dt


# ---- Plot 1: x(t) ----
plt.figure()
plt.plot(t_values, x_values)
plt.xlabel("Time")
plt.ylabel("Position x(t)")
plt.title("Harmonic Oscillator")
plt.grid(True)
plt.show()

# ---- Plot 2: Phase Space (x vs v) ----
plt.figure()
plt.plot(x_values, v_values)
plt.xlabel("Position x")
plt.ylabel("Velocity v")
plt.title("Phase Space")
plt.grid(True)
plt.show()
